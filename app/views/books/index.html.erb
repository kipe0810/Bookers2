<div class="area">
    <h1>Books</h1>

	<table border="0">
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.opinion %></td>
		</tr>
		<% end %>
	</table>
</div>