<div class="about-box">
	<h1>Editing Book</h1>

	<% if @book.errors.any? %>
	    <%= @book.errors.count %>件のerrorが発生しました
	    <% @book.errors.full_messages.each do |message| %>
	        <%= message %>
	    <% end %>
    <% end %>

	<%= form_for(@book) do |f| %>
		<h4>title</h4>
		<%= f.text_field :title %>
		<h4>opinion</h4>
		<%= f.text_area :body %><br>
		<%= f.submit 'Update Book', class: "btn btn-primary" %>
	<% end %>
</div>