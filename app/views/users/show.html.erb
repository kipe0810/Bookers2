<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
	<div class="row">
		<%= render 'list', user: @user, book: @book %>
		<div class="col-sm-9">
			<h1>Books</h1>
			<table class="table">
				<tbody>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.opinion %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
    </div>
</div>