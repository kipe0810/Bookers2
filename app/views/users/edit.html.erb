<div class="about-box">
	<h1>User info</h1>

	<% if @user.errors.any? %>
	    <%= @user.errors.count %>件のerrorが発生しました
	    <% @user.errors.full_messages.each do |message| %>
	        <%= message %>
	    <% end %>
    <% end %>

	<%= form_for(@user) do |f| %>
		<h4>Name</h4>
		<%= f.text_field :name, autofocus: true, placeholder:"名前" %>
		<h4>Image</h4>
		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
		<h4>Introduction</h4>
		<%= f.text_area :introduction %>

		<br><%= f.submit "Update User" %>
	<% end %>
</div>