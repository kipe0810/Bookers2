

<div class="container">
	<div class="row">
		<%= render 'list', user: current_user, book: @book %>

		<div class="col-sm-9">
			<h1>Users</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>